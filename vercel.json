{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/**"] }
    }
  ],
  "routes": [
    {
      "src": "/users/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/posts/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/comments/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/likes/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
