{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "frontend/dist" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/users/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/posts/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/comments/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/likes/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
